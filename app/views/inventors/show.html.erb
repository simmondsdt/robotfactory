<h1>Inventor # <%= @inventor[:id] %></h1>
<hr />

<div class="row">
  <div class="col s12 center">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @inventor.name %></span>
        <p>Age: <%= @inventor.age %></p>
        <p>Hire Date: <%= @inventor.hire_date.strftime('%B %e, %Y') %></p>
        <p>Specialty: <%= @inventor.speciality.titleize %></p>
        <p>Number of Robots: <%= @robots.count %></p>
      </div>
      <div class="card-action">
        <%= link_to 'Edit', edit_inventor_path(@inventor) %>
        <%= link_to 'Delete', inventor_path(@inventor), method: :delete, data: {confirm: 'Are you sure?'} %>
      </div>
    </div>
    <% if @robots.any? %>
      <h4> All Robots </h4>
      <% @robots.each do |robot| %>
        <div class="">
          <div class="col s12 m4 l6">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title"><%= robot.name %></span>
                <p> Industry: <%= robot.industry.titleize %> </p>
              </div>
              <div class="card-action">
                <%= link_to 'Show', inventor_robot_path(@inventor, robot) %>
                <%= link_to 'Edit', edit_inventor_robot_path(@inventor, robot) %>
                <%= link_to 'Delete', inventor_robot_path(@inventor, robot), method: :delete, data: {confirm: 'Are you sure?'} %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= link_to 'New Robot', new_inventor_robot_path(@inventor), class: 'btn blue' %>
    <%= link_to 'Inventors', inventors_path(@inventor), class: 'btn black white-text' %>
  </div>
</div>
